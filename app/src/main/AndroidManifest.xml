<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lui_project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name="com.example.lui_project.service.StepCounterService" />
        <receiver android:name=".receiver.FunctionBroadcastReceiver">
            <intent-filter>
                <action android:name="mrkj.healthylife.RECORDED" />
                <action android:name="mrkj.healthylife.SETALARM" />
                <action android:name="mrkj.healthylife.PLAN" />
            </intent-filter>
        </receiver>
        <activity
            android:name=".PlayActivity"
            android:screenOrientation="portrait" />
        <service android:name=".service.ExecuteHealthyPlanService" />
        <activity
            android:name=".SettingHealthyHealthyActivity"
            android:screenOrientation="portrait" />



        <activity android:name=".Test_findActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>